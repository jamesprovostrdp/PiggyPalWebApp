@{
}

<form action="/api/auth/login" method="post">
        <h2>Login</h2>
  
        <div>
            <label asp-for="Username" class="form-label mt-4">Username or Email address</label>
            <input asp-for="Username" class="form-control" aria-describedby="emailHelp" placeholder="Enter username/email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <span asp-validation-for="Username"></span>
        </div>

        <div>
            <label asp-for="Password" class="form-label mt-4">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>

        <br />   

        <button type="submit" class="btn btn-primary">Login</button>
        <br />

        <div>
            <small class="text-muted">Don't have an account? Register instead!</small>
            <br />
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</a>
        </div>
</form>